---
eleventyComputed:
  id: "{{ id }}"
---
<!DOCTYPE html>
<html lang="fr-CA" id="top" class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover" />
    <title>ADTILCSL{{ ' | ' + title | replace("&#39;", "'") if title else '' }}</title>
    <meta name="description" content="{{ description if description else site.description }}" />
    <link rel="icon" type="image/x-icon" href="{{ site.base }}/favicon.ico" sizes="16x16 32x32 48x48 256x256" />
    <link rel="icon" type="image/png" href="{{ site.base }}/images/favicon/favicon_192.png" sizes="192x192" />
    <link rel="apple-touch-icon" href="{{ site.base }}/images/favicon/favicon_192.png" />
    <script>document.documentElement.classList.remove('no-js');</script>
    <link rel="stylesheet" type="text/css" href="{{ '/style/index.css' | url }}" />
    <link rel="canonical" href="{{ site.base }}{% if page.url | url not in page.url | url %}{{ page.url | url }}{% endif %}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="{{ description if description else site.description }}" />
    <meta property="og:url" content="{{ site.base }}{% if page.url | url not in page.url | url %}{{ page.url | url }}{% endif %}" />
    <meta property="og:image" content="{{ ogImage | url if ogImage else 'images/sejour-plein-air.jpg' | url }}" />
    <meta property="og:image:alt" content="{{ ogImageAlt if ogImageAlt else 'Photo de groupe prise au séjour plein air de la Techniques en loisir du Cégep de Saint-Laurent.' }}" />
    <script type="module" src="/js/index.js"></script>
    {%- if id === "formationYoutube" or id === "blogYoutube" %}
      <link rel="preconnect" href="https://www.youtube.com" crossorigin="anonymous" />
    {% endif -%}

    {%- if id === "formationYoutube" or id === "article" or id === "blogYoutube" or id === "sejours" %}
      <meta property="fb:app_id" content="1277565455782139" />
    {% endif -%}
</head>
<body>
    {% include 'partials/_header.njk' %}
    {% if page.url !== 'search/' %}
    {% searchForm
    className = "search-shown-with-js hide",
    id = "search-shown-with-js",
    closeBtn = true
    %}
    {% endif %}
    {% if page.url === '/' %}
    <div class="hero">
      <div class="grid-12">
        <div class="hero__text">
          <h1>
            Une association au service de ses diplômés
          </h1>
          <p>
            Une équipe dévouée vous offre services, accompagnement, conseils et plus encore!
          </p>
        </div>
        <div class="hero__img-container">
          {% picture 
          input = "/images/hero.jpg" | url,
          alt = "Hero image"
          %}
        </div>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="5 0 1266 281"><path fill="#fdfefe" fill-opacity="1" d="M0,160L48,133.3C96,107,192,53,288,53.3C384,53,480,107,576,128C672,149,768,139,864,149.3C960,160,1056,192,1152,176C1248,160,1344,96,1392,64L1440,32L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
    </div>
    {% endif %}
    {{ content | safe }}
    {% include 'partials/_footer.njk' %}
</body>
</html>